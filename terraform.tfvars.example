# =======================================================
# WordPress 3-Tier Infrastructure Configuration
# =======================================================

# Project Configuration
project_name = "wordpress-3tier"
environment  = "dev"
owner        = "thuctap-student"
aws_region   = "ap-southeast-1"

# Network Configuration
vpc_cidr               = "10.0.0.0/16"
availability_zones     = ["ap-southeast-1a", "ap-southeast-1b"]
public_subnet_cidrs    = ["10.0.1.0/24", "10.0.2.0/24"]
private_subnet_cidrs   = ["10.0.10.0/24", "10.0.20.0/24"]
database_subnet_cidrs  = ["10.0.100.0/24", "10.0.200.0/24"]

# Database Configuration
db_instance_class = "db.t3.micro"
db_name          = "wordpress"
db_username      = "admin"
db_password      = "ChangeMe123!"  # Use strong password

# EC2 Configuration
instance_type    = "t3.micro"
key_name        = "your-key-pair"  # Create this in AWS Console first
min_size        = 1
max_size        = 4
desired_capacity = 2

# Monitoring Configuration
alert_email = "your-email@example.com"  # Optional: for CloudWatch alerts

# =======================================================
# IMPORTANT NOTES:
# =======================================================
# 1. Create AWS Key Pair in EC2 Console before deployment
# 2. Use strong database password
# 3. Update alert_email for monitoring notifications
# 4. Estimated cost: ~$84/month for this configuration
# =======================================================